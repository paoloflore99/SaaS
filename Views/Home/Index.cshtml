@model CalcoloViewModel

<div class="text-center">
    <h1 class="display-4">Calcolatore Stipendio</h1>
    <p>Inserisci i dettagli per calcolare il costo aziendale e lo stipendio netto.</p>
</div>

<div class="container">
    <form asp-controller="Home" asp-action="Calcolo" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="card p-3">
                    <label for="contratto"><strong>Tipologia di contratto</strong></label>
                    <select id="contratto" name="contratto" class="form-select">
                        <option value="indeterminato">Tempo indeterminato</option>
                        <option value="determinato">Tempo determinato</option>
                        <option value="aprendistato">Apprendistato</option>
                        <option value="aministratore">Collaboratore / Amministratore</option>
                    </select>

                    <div class="mb-3">
                        <strong>RAL (€)</strong>
                        <input type="number" name="lordo" class="form-control" required />
                    </div>

                    <label for="agevolazione"><strong>Agevolazione contributiva</strong></label>
                    <select id="agevolazione" name="agevolazione" class="form-select">
                        <option value="Nessunaagevolazione">Nessuna agevolazione</option>
                        <option value="Under30">Under 30</option>
                        <option value="donna">Donna</option>
                        <option value="Under50">Under 50</option>
                    </select>

                    <label for="detrazione"><strong>Detrazione fiscale</strong></label>
                    <select id="detrazione" name="detrazione" class="form-select">
                        <option value="Nessunadetrazione">Nessuna detrazione</option>
                        <option value="inpatriati">Bonus inpatriati</option>
                        <option value="inpatriati(con figli)">Bonus inpatriati (con figli)</option>
                    </select>

                    <div class="text-end mt-3">
                        <input type="submit" class="btn btn-small btn-info" value="Calcola">
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card p-3">
                    @if (Model != null)
                    {
                        <div class="mb-3">
                            <label><strong>Seleziona il periodo:</strong></label>
                            <div class="btn-group" role="group">
                                <button type="button" id="annualeBtn" class="btn btn-primary" onclick="toggleMensileOptions('annuale')">Annuale</button>
                                <button type="button" id="mensileBtn" class="btn btn-outline-primary" onclick="toggleMensileOptions('mensile')">Mensile</button>
                            </div>
                        </div>

                        <div id="mensileOptions" style="display:none; margin-top: 15px;">
                            <label for="mensilita"><strong>Seleziona le mensilità:</strong></label>
                            <select id="mensilita" name="mensilita" class="form-select" onchange="updateResults()">
                                <option value="12">12 Mensilità</option>
                                <option value="13">13 Mensilità</option>
                                <option value="14">14 Mensilità</option>
                            </select>
                        </div>

                        <!-- Visualizzazione Annuale -->
                        <div id="risultatiAnnuali">
                            <p><strong>Costo Azienda</strong> €@Model.CostoTotale</p>
                            <p><strong>Stipendio lordo</strong> €@Model.Lordo</p>
                            <p><strong>Stipendio netto</strong> €@Model.Netto</p>
                        </div>

                        <!-- Visualizzazione Mensile -->
                        <div id="risultatiMensili" style="display:none; margin-top: 20px;">
                            <div id="risultatoMensile12" style="display: none;">
                                <p><strong>Mese Lordo:</strong> €@Model.MeseLordo</p>
                                <p><strong>Mese Netto:</strong> €@Model.MeseNetto</p>
                            </div>
                            <div id="risultatoMensile13" style="display: none;">
                                <p><strong>Mese Lordo 13:</strong> €@Model.MeseLordo13</p>
                                <p><strong>Mese Netto 13:</strong> €@Model.MeseNetto13</p>
                            </div>
                            <div id="risultatoMensile14" style="display: none;">
                                <p><strong>Mese Lordo 14:</strong> €@Model.MeseLordo14</p>
                                <p><strong>Mese Netto 14:</strong> €@Model.MeseNetto14</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p>Non ci sono dati da mostrare.</p>
                    }
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function toggleMensileOptions(periodo) {
        var mensileOptions = document.getElementById("mensileOptions");
        var annualeBtn = document.getElementById("annualeBtn");
        var mensileBtn = document.getElementById("mensileBtn");
        var risultatiAnnuali = document.getElementById("risultatiAnnuali");
        var risultatiMensili = document.getElementById("risultatiMensili");

        if (periodo === "mensile") {
            mensileOptions.style.display = "block";
            mensileBtn.classList.add("btn-primary");
            mensileBtn.classList.remove("btn-outline-primary");
            annualeBtn.classList.remove("btn-primary");
            annualeBtn.classList.add("btn-outline-primary");
            risultatiAnnuali.style.display = "none";
            risultatiMensili.style.display = "block";
        } else {
            mensileOptions.style.display = "none";
            annualeBtn.classList.add("btn-primary");
            annualeBtn.classList.remove("btn-outline-primary");
            mensileBtn.classList.remove("btn-primary");
            mensileBtn.classList.add("btn-outline-primary");
            risultatiAnnuali.style.display = "block";
            risultatiMensili.style.display = "none";
        }
    }

    function updateResults() {
        var mensilita = document.getElementById("mensilita").value;
        document.getElementById("risultatoMensile12").style.display = mensilita === "12" ? "block" : "none";
        document.getElementById("risultatoMensile13").style.display = mensilita === "13" ? "block" : "none";
        document.getElementById("risultatoMensile14").style.display = mensilita === "14" ? "block" : "none";
    }
</script>
