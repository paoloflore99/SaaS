@model CalcoloViewModel
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <form asp-controller="Home" asp-action="Calcolo" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()


        <!--

        tipologia di contratto 
        tempo indeterminato 
        tempo determinato 
        aprendistato
        collaboratore / aministratore / co. co .co
        part

        -->
        <div class="mb-3">
            <strong>Nome:</strong>
            <input type="number" name="lordo" value="" />
        </div>

        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Salva">
        </div>
    </form>
    <!--

    agevolazioni contributive 
    1 nessunio 
    2 under 30
    3 donna 
    4 under 50
    -->

    <label for="agevolazione">Seleziona un'agevolazione contributiva:</label>
    <select id="agevolazione" name="agevolazione">
        <option value="nessuna">Nessuna</option>
        <option value="under30">Under 30</option>
        <option value="donna">Donna</option>
        <option value="under50">Under 50</option>
    </select>

    <!--

    detrazione fiscale 
    1 nessuna detrazione 
    2 bonus inpatriati
    3 bonus inpatriati(con figli)

    -->
    <label for="agevolazione">detrazione fiscale:</label>
    <select id="agevolazione" name="agevolazione">
        <option value="nessuna">Nessuna</option>
        <option value="under30">bonus inpatriati</option>
        <option value="donna">bonus inpatriati(con figli)</option>

    </select>
    <!--

    numero delle mensilita 12 13 14 
    -->
    @if (Model != null)
    {
        <p>Lordo: @Model.Lordo</p>
        <p>Netto: @Model.Netto</p>
        <p>Mese Lordo 12: @Model.MeseLordo</p>
        <p>Mese Netto 12: @Model.MeseNetto</p>
        <p>Mese Lordo 13: @Model.MeseLordo13</p>
        <p>Mese Netto 13: @Model.MeseNetto13</p>
        <p>Mese Lordo 14: @Model.MeseLordo14</p>
        <p>Mese Netto 14: @Model.MeseNetto14</p>
    }
    else
    {
        <p>Non ci sono dati da mostrare.</p>
    }

    <!--
    inserisco il lordo dello
    restituisco il netto 
    il netto del costo dell'inprenditore
    suddivisione 13 o 14 mesilita

    -->

</div>